<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <br />

  Ingredients:

  <%= f.fields_for :ingredients do |ingredient| %>
    <%= ingredient.label :ingredient_0 %>
    <%= ingredient.text_field :ingredient_0 %><br>

    <%= ingredient.label :ingredient_1 %>
    <%= ingredient.text_field :ingredient_1 %><br>

    <%= ingredient.label :name %>
    <%= ingredient.text_field :name %><br>

    <%= ingredient.label :quantity %>
    <%= ingredient.text_field :quantity %><br>

  <% end %>
  <br />

  <%= f.submit %>
<% end %>
